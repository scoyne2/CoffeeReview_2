@model  IQueryable<WebApplication1.Models.ReviewDisplay>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Rating</th>
                        <th>Review</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(ReviewDisplay r in Model)
                    {
                        <tr>
                            <td>@r.reviewer_first_name</td>
                            <td>@r.review_rating</td>
                            <td>@r.review_description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>